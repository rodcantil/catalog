<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>


  <strong>Category: </strong>
    <% product.categories.each do |category| %>
      <p><%= category.name %></p>
    <% end %>

</div>
